{
	"useTabs": true,
	"singleQuote": true,
	"endOfLine": "lf",
	"trailingComma": "none",
	"printWidth": 100,
	"plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss"],
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		},
		{
			"files": ["*.html"],
			"options": {
				"htmlWhitespaceSensitivity": "ignore"
			}
		},
		{
			"files": ["*.ts"],
			"options": {
				"singleQuote": false
			}
		},
		{
			"files": ["*.md"],
			"options": {
				"useTabs": false
			}
		}
	]
}
